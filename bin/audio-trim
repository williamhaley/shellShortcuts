#!/usr/bin/env bash

show_help()
{
cat << EOF
$(basename "$0") FILE DURATION

    FILE      path to audio file to trim
    DURATION  positive or negative number. positive trims from start. negative trims from end

EOF
}

if [ -z "$1" ];
then
	show_help
	exit 1
fi

if [ -z "$2" ];
then
	show_help
	exit 1
fi

total=$(ffprobe -v 0 -show_entries format=duration -of compact=p=0:nk=1 "${1}")

echo "Total duration of audio clip: $total seconds"

path=$(dirname "${1}")
filename=$(basename -- "$1")
extension="${filename##*.}"
filename="${filename%.*}"
new_name="${path}/${filename}.new.${extension}"

trim=$2

if [ $trim -lt 0 ];
then
	# Trim off the last X seconds.
	duration=$(echo "$total + $trim" | bc)
	ffmpeg -i "${1}" -t $duration -acodec copy -vcodec copy "${new_name}"
else
	# Trim off the first X seconds.
	seek_position=$trim
	ffmpeg -i "${1}" -ss $seek_position -acodec copy -vcodec copy "${new_name}"
fi

