#!/usr/bin/env bash

docker stop $(docker ps -aq)

docker system prune -a -f

if [ -f "$HOME/Library/Containers/com.docker.docker/Data/com.docker.driver.amd64-linux/Docker.qcow2" ];
then
	echo "!!! Deleting qcow image. Restart docker!"
	rm "$HOME/Library/Containers/com.docker.docker/Data/com.docker.driver.amd64-linux/Docker.qcow2"
fi

