#!/usr/bin/env bash

rsync_opts="--delete-excluded --delete-after"

dest="/mnt/backup-internal/system-backup"
wrclone ${rsync_opts} "/home/will/Photographs/" "Backup:willhaley-backup/Photographs/"
wrclone ${rsync_opts} "/home/will/Music/"       "Backup:willhaley-backup/Music/"

if ! `findmnt -M "/mnt/backup-internal" >/dev/null`;
then
	echo "Disk not mounted"
	exit 1
else
	# Unencrypted
	wrclone ${rsync_opts} "/mnt/backup-internal/Software/"  "Backup:willhaley-backup/Software/"
	# Encrypted
	wrclone ${rsync_opts} "/home/will/Documents/"           "BackupCrypt:willhaley-backup/Documents/"
fi
