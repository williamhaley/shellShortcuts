#!/usr/bin/env ruby

require 'socket'
require 'json'
require 'uri'

users = {}

server = TCPServer.new('localhost', 2345)

puts "Serving locally at port 2345."

loop do
  socket = server.accept

  request = socket.gets

  next unless request

  STDERR.puts request

  method, path = request.split

  headers = {}
  while line = socket.gets.split(' ', 2)
    break if line[0] == ""

    headers[line[0].chop] = line[1].strip
  end

  body = socket.read(headers["Content-Length"].to_i)

  puts body if body.length > 0

  response = { :error => 'Not found' }

  if method == 'GET' && path == '/users'
    response = users.values
  elsif method == 'GET' && /\/users\/+[0-9]/.match(path)
    id = /\/users\/+[0-9]/.match(path).to_s.split('/').last

    response = users[id.to_i]
  elsif method == 'POST' && path == '/users'
    user = JSON.parse(body.delete(' '))

    id = users.length + 1

    user[:id] = id

    users[id] = user

    response = users.values
  end

  json = { :data => response }.to_json

  socket.print "HTTP/1.1 200 OK\r\n" +
               "Access-Control-Allow-Origin: *\r\n" +
               "Content-Type: application/json\r\n" +
               "Content-Length: #{json.to_s.bytesize}\r\n" +
               "Connection: close\r\n"

  socket.print "\r\n"

  socket.print json.to_s
  
  socket.close

  puts "OK: #{response}"
end

