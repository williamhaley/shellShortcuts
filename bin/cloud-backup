#!/usr/bin/env bash

source "${CONFIGS_DIR}/ENV"

if [ -z "${CLOUD_BACKUP_DEST}" ];
then
	echo "Define CLOUD_BACKUP_DEST in ENV."
	exit 1
fi

# Unencrypted

rclone-common \
	"${LOCAL_BACKUP_DEST}/Photographs/" \
	"${CLOUD_BACKUP_DEST}/Photographs/"

rclone-common \
	"${LOCAL_BACKUP_DEST}/Music/" \
	"${CLOUD_BACKUP_DEST}/Music/"

rclone-common \
	"${LOCAL_BACKUP_DEST}/Software/" \
	"${CLOUD_BACKUP_DEST}/Software/"

# Encrypted

rclone-common \
	"${LOCAL_BACKUP_DEST}/Documents/" \
	"${CLOUD_BACKUP_DEST_CRYPT}/Documents/"
