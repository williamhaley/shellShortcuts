#!/usr/bin/env bash

set -e

FORMAT="m4a"

FILENAME=$(youtube-dl "$1" -o "%(title)s" --get-filename)
SANITIZED=$(echo $FILENAME | tr -d "\"" | tr -d "'")
youtube-dl --extract-audio --audio-format ${FORMAT} --output "${SANITIZED}.%(ext)s" $1
kid3-cli -c "set title '${SANITIZED}'" "${SANITIZED}.${FORMAT}"